csl_unit a {
  csl_port p_in(input,6);
  csl_port p_out(output,6);
  csl_port clk(input);
  a () {
    clk.set_attr(clock);
  }
};

csl_unit b {
  a a0;
  b () {
  }
};

csl_unit c {
  b b0;
  c () {
  }
};

csl_signal s;

csl_vector stim_vect {
  stim_vect () {
    set_unit_name(a);
    set_vc_compare_trigger(s);
    set_direction(input);
  }
};

csl_vector exp_vect {
  exp_vect () {
    set_unit_name(a);
    set_direction(output);
  }
};

csl_testbench tb {
  csl_signal clk(reg);
  a a0(.clk(clk));
  tb () {
    clk.set_attr(clock);
    add_logic(clock,clk,10,ps);
  }
};
