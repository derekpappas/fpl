csl_interface inifc{
  csl_port x(input);
  csl_port y(output);
  inifc(){
  }
};

csl_interface slifc{
  inifc inifc0;
  inifc inifc1;
  slifc(){
  }
};

csl_interface tlifc{
  slifc slifc0;
  slifc slifc1;
  tlifc(){
    slifc0.reverse();
  }
};

csl_unit a{
  tlifc tlifc0;
  a(){
  }
};

csl_unit top{
  csl_port x(input);
  a a0;
  a a1;
  top(){
    x.connect_by_pattern(x);
  }
};
