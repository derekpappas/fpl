// connecting a signal group with an interface that has different port names

csl_interface ifc {
  csl_port x1(input),x2(input);
  ifc () {}
};

csl_signal_group sg {
  csl_signal s1,s2;
  sg () {}
};

csl_unit u1 {
  ifc ifc1;
  u1 () {}
};

csl_unit u2 {
  sg sg1;
  u2 () {}
};

csl_unit u3 {
  u1 u11;
  u2 u21;
  u3 () {
    u21.sg1.connect(u11.ifc1);
  }
};
