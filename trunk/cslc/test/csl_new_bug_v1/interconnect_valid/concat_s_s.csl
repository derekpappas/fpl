
//signal - signal concatenation
 

csl_unit a {
  csl_port a_in(input);
  csl_port a_out(output,8);
  a(){}
};

csl_unit b{
  csl_port b_in(input);
  csl_port b_out(output,8);
  b(){}
};

csl_unit c{
  csl_port c_in(input,16);
  csl_port c_out(output);
  c() {}
};

csl_unit top{
  csl_signal s1(8),s2(8),s3;
  a a0(.a_out(s1),.a_in(s3));
  b b0(.b_out(s2),.b_in(s3));
  c c0(.c_in({s1,s2}),.c_out(s3));
  top() {}
};
  
