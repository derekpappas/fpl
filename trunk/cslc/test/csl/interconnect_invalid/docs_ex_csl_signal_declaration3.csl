csl_unit receiver{

	csl_port state(output);
	csl_port p_clk(output); //clk is a reserved word
	csl_port in(input,4);
	receiver(){
	}
};

csl_unit sender{
	csl_port state(output);
	csl_port p_clk(output); //clk is a reserved word
	csl_port out(output,4);
	sender(){
	}
};
csl_unit top{

csl_signal sgn_clk(wire);
csl_signal state(reg,2);
 receiver rec( .state(state),.p_clk(sgn_clk));
 sender send( .state(state),.p_clk(sgn_clk));

 top(){}
};
