csl_unit a{
    csl_port x(output,4),y(input,8);
    csl_port clk(input);
    a(){
        set_signal_prefix("one");
  }
};

csl_unit b{
     csl_port x(input,4),y(output,8);
     csl_port clk(input);
     b(){
     set_signal_prefix("one");
 }
};
csl_unit c{
     csl_port xc(output,8),yc(output,8);
     csl_port clk(input);
     c(){
       set_signal_prefix("one");
  }
};
csl_unit u1{
    csl_signal x,y,p1,p2,p3,p4,x1,y1;
    csl_signal clk;
    a a(.x(x),.y(y),.clk(clk));
    b b(.x(x),.y(y),.p1(p1),.p2(p2),.p3(p3),.p4(p4),.clk(clk));
    c c(.p1(p1),.p2(p2),.p3(p3),.p4(p4),.xc(x1),.yc(y1),.clk(clk));
    u1(){
        clk.set_attr(clock);
        set_signal_prefix("two");
 }
};
csl_unit u2{
     csl_port p(inout);
     csl_signal clk;
     u2(){
        clk.set_attr(clock);
        set_signal_prefix("two");
  }
};
csl_unit top{
     csl_signal p,clk;
     u1 u1;
     u2 u2(.p(p));
     top(){
      clk.set_attr(clock);
      set_signal_prefix("three");
  }
};

