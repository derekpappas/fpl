//the clk port in the dut is missing the 
//set_attr(clock) command

csl_unit dut{
  csl_port clk(input); // the port should have the clock attr set
  csl_port stim(input),exp(output);
  dut(){}
};

csl_vector stim{
  stim(){
    set_unit_name(dut);
    set_direction(input);
  }
};

csl_vector exp{
  exp(){
    set_unit_name(dut);
    set_direction(output);
  }
};

csl_testbench tb{
  csl_signal clk(reg);
  dut dut;
  tb(){
    clk.set_attr(clock); 
    add_logic(clock,clk,10,ps); 
}
};
