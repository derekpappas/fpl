csl_enum e {
  a = 1,
  b,
  c
};

csl_field f1{
  f1(){
    set_width(32);
    set_enum(e); // this means all instances of f1 are restricted to
                 // the enum item values of e
  }
};

csl_field f2{
  f1 f1_0;
  f2(){
    set_width(32);
    f1_0.set_enum_item(a); // selects the enum item a from the enum e
  }
};

