//declaring fields
csl_isa_field f_op(2,e_op);
csl_isa_field f_dest(3);
csl_isa_field f_srca(3);
csl_isa_field f_srcb(3);

// declaring formats
csl_isa_element format{
    f_op f_op_i;
    f_dest f_dest_i;
    f_srca f_srca_i;
    f_srcb f_srcb_i;
    format(){
	set_type(instr_format);
        set_width(11);
        set_position(f_op_i, 9);
        set_next(f_op_i, f_dest_i);
        set_next(f_dest_i, f_srca_i);
        set_next(f_srca_i, f_srcb_i);
    }
};

csl_isa_element format2 : format{
    // instanciate again the field that are inheritanced from 'format'
    f_op f_op_i2;
    f_dest f_dest_i;
    f_srca f_srca_i;
    f_srcb f_srcb_i;
    format2(){
        // adding again all fields instance
	set_type(instr_format);
        set_width(11);
        set_position(f_op_i, 9);
        set_next(f_op_i, f_dest_i);
        set_next(f_dest_i, f_srca_i);
        set_next(f_srca_i, f_srcb_i);
    }
};
