csl_unit u_0{
  csl_port in(input),out(output);
  u_0(){}
};
csl_unit u_1{
  csl_port pi(input),po(output);
  u_0 u_0(.in(pi),.out(po));
  u_1(){}
};
csl_unit u_2{
  csl_port pi(input),po(output);
  u_1 u_1(.pi(pi),.po(po));
  u_2(){}
};
csl_unit top{
  csl_port pi(input),po(output);
  u_2 u_2;
  top(){
    pi.connect_by_name(u_2.pi);
    po.connect_by_name(u_2.po);
  }};
