csl_unit u_a{
  csl_port p_a_in(input,3);
  csl_port p_a_out(output,2);
  u_a(){
  }
};

csl_unit u_b{

  csl_port p_b_out(output,2);
  u_b(){
  }
};                       

csl_unit u_c{
  u_a a;
  u_b b;
  u_c(){

  }
};

csl_unit u_d{
  csl_port p_d_in0(input,2);
  csl_port p_d_in1(input,3);
  csl_port p_d_in2(input,2);
  csl_port p_d_out(output);
  u_d(){
  }
};

csl_unit u_top{
  csl_port p_t_in(input,3);
  csl_port p_t_out(output);

  u_c c;
  u_d d;
  u_top(){
    
    p_t_in.connect_by_pattern(p_a_in);
    p_t_in.connect_by_pattern(p_d_in1);
    p_t_out.connect_by_name(d.p_d_out);

    c.b.p_b_out.connect_by_name(d.p_d_in0);
    c.a.p_a_out.connect_by_name(d.p_d_in2);
  }
};
