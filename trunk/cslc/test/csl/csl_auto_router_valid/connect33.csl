csl_interface ifc1 {
  csl_port x(input),y(output);
  ifc1 () {}
};

csl_interface ifc2 {
  csl_port x(input),y(output);
  ifc2 () {}
};

csl_signal_group sg {
  csl_signal x,y;
  sg () {}
};

csl_unit a {
  csl_port p1(input),p2(input);
  ifc1 ifc10;
  a () {
    //    ifc10.reverse();
  }
};

csl_unit b {
  a a0;
  csl_port p3(input),p4(input);
  sg sg1;
  ifc2 ifc20;
  b () {}
};

csl_unit c {
  b b0;
  b b1(.p3(s2),.p4(s3),.ifc20(ifc20));
  csl_signal s2,s3;
  ifc2 ifc20;
  c () {
    b0.p3.connect_by_name(b0.a0.p1);
    b1.p3.connect_by_name(b1.a0.p2);
    b0.a0.p1.connect_by_name(s2);
    s3.connect_by_name(b0.p4);
    ifc20.connect_by_name(b0.a0.ifc10);
    b0.sg1.connect_by_name(ifc20);
  }
};
