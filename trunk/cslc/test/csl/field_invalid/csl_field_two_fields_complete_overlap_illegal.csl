//is not legal to set the same position for 2 different fields
csl_field op {
  op() {
    set_width(2);
  }
};

csl_field op1 {
  op1() {
    set_width(4);
  }
};


csl_field instr_fmt {
  op op0;
  op1 op1;

  instr_fmt() {
    set_width(32);
    set_field_position(op0,28);
    set_field_position(op1,27);
  }
};
