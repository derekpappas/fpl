//signal - signal group concatenation

csl_signal_group sg {
  csl_signal s1(2),s2(8),s3(10);
  sg () {}
};

csl_unit u1 {
  sg sg0;
  csl_port y(output,2);
  u1 () {
    sg0.s3 = {sg0.s1,sg0.s2};
  }
};

csl_unit u2 {
  sg sg1;
  u2 () {
    sg1.s3 = {sg1.s1,sg1.s2};
  }
};

csl_unit u3 {
  csl_port x(input,13);
  sg sg0;
  u1 u10(.y(sg0.s1));
  u2 u20;
  u3 () {
    x={sg0.s3,sg0.s2};
  }
};
