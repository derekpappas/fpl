csl_enum e_op{ 
    ALU, 
    MOV, 
    BR
};
csl_enum e_ALU{ 
    XOR, 
    OR, 
    AND
};
csl_isa_field f_op{
  f_op(){
    set_width(2);
    set_enum(e_op);
    set_type(opcode);
  }
};
csl_isa_field f_alu{
 f_alu(){
    set_type(selector);
    set_width(2);
    set_enum(e_ALU);
  
  }
};


csl_isa_element isa { 
  isa() { 
    set_type(root_format); 
    set_width(32); 
  }
};
csl_isa_element f: isa { 
  f_op f_op; 
  f_alu f_alu;  
  f() { 
    set_type(instr_format); 
    set_position(f_alu, 16); 
    set_position(f_op, 30); 
  }
}; 
csl_isa_element f1: f{ 
 
 f1() { 
    set_type(instr); 
    
    f_op.set_enum_item(ALU); 
    f_alu.set_enum_item(XOR); 
  }
}; 
csl_isa_element f2: f{ 

 f2() { 
    set_type(instr); 
    f_op.set_enum_item(ALU); 
    f_alu.set_enum_item(OR); 
  }
}; 
csl_isa_element f3: f{ 
 
 f3() { 
    set_type(instr); 
    f_op.set_enum_item(ALU); 
    f_alu.set_enum_item(AND);

  }
}; 
csl_isa_element f4: f{ 
 
 f4() { 
    set_type(instr); 
    f_op.set_enum_item(MOV); 
    f_alu.set_enum_item(AND);
  
  }
}; 
csl_isa_element f5: f{  
 f5() { 
    set_type(instr); 
    f_op.set_enum_item(BR); 
    f_alu.set_enum_item(OR);

  }
}; 
