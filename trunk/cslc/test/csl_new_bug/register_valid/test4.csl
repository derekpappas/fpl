csl_register rs{
  rs() {
    set_width(32);
    set_type(counter);
    add_logic(count_direction,up);
    add_logic(start_value,3);
    add_logic(end_value,6);
  }
};

csl_unit u{
  csl_port clk(input);
  csl_signal rst,en,data(32);
  rs rs0(.clock(clk),.reset_(rst),.enable(en),.reg_out(data));
  u() {
    clk.set_attr(clock);
  }
};

csl_memory_map_page mpag{
  mpag() {
    set_unit_name(u);
    add_address_range(0,128);
  }
};

csl_memory_map mmap{
  mmap() {
    set_type(hierarchical);
  }
};
