csl_unit proc {
  r1 r1i0;
  r2 r2i0;
  r3 r3i0;
  r4 r4i0;
  rf1 rf1i0;
  rf2 rf2i0;
  rf3 rf3i0;
  rf4 rf4i0;
  rf5 rf5i0;
  rf6 rf6i0;
