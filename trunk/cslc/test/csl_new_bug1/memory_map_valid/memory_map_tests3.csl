csl_fifo f1{
  f1(){
    set_width(8);
    set_depth(32);
  }
};

csl_unit u1{
  f1 f1;
  u1(){}
};

csl_unit u2{
  u1 u1;
  u2(){}
};

csl_unit top{
  u2 u2;
  top(){
  }
};

csl_memory_map_page mpage1{
	mpage1(){
      add_address_range(0,255);
      set_unit_name(u1);
      add(top.u2.u1.f1,"TOP-F1");
    }
};

csl_memory_map_page mpage2{
  mpage2(){
    add_address_range(0,255);
    set_unit_name(u2);
    //   set_address_increment(34);
    //  set_next_address(200);
  }
}; 

csl_memory_map_page mpage3{
  mpage3(){
    add_address_range(0,255);
    set_unit_name(top);
    add(top.u2.u1.f1,"ff"); //should this pass?
  }
};

csl_memory_map mm{
	mm(){
    set_type(hierarchical);
    set_data_word_width(32);
    set_prefix("abc");
    set_top_unit(top);
    
}
};
