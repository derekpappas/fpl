csl_fifo f1{
  f1(){
    set_depth(32);
    set_width(8);
  }
};

csl_unit u{
  f1 f1;
  u(){}
};

csl_unit top{
  u u;
  top(){
  }
};

csl_memory_map_page mpage1{
	mpage1(){
		add_address_range(0,255);
		set_unit_name(u);
                add(f1,"TOP-F1");
  }
};
csl_memory_map_page mpage2{
	mpage2(){
                add_address_range(0,255);
		set_unit_name(top);
		set_address_increment(34);
                set_next_address(240);
  }
}; 
csl_memory_map mm{
	mm(){
    set_type(hierarchical);
    set_data_word_width(32);
    set_prefix("abc");
    set_suffix("xyz");
    set_top_unit(top);
   
  }
};
