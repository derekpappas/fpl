csl_register reg{
  reg(){
    set_width(32);
    set_type(register);
  }
};

csl_unit u1{
  reg reg;
  u1(){}
};

csl_unit u2{
  u1 u11;
  u1 u12;
  u2(){}
};

csl_unit u3{
  u2 u21;
  u2 u22;
  u2 u23;
  u3(){}
};

csl_memory_map_page mpag{
  mpag(){
    add_address_range(0,156);
    set_unit_name(u1);
  }
};

csl_memory_map mmap{
  mmap(){
    set_type(hierarchical);
    u3.u21.u11.set_base_address(200);
    u3.u21.u12.set_base_address(300);
    u3.u22.u11.set_base_address(400);
    u3.u22.u12.set_base_address(500);
  }
};
