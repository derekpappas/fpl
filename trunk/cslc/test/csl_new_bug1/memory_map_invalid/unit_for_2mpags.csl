//2 memory_map_pages with the same unit

csl_register reg{
  reg(){
    set_width(32);
    set_type(counter);
    add_logic(count_direction,up);
  }
};

csl_unit u{
  reg reg;
  u(){}
};

csl_memory_map_page mpag1{
  mpag1(){
    add_address_range(0,156);
    set_unit_name(u);
    add(reg,"counter",6);
  }
};

csl_memory_map_page mpag2{
  mpag2(){
    add_address_range(0,128);
    set_unit_name(u);  // mpag2 should have a different unit
  }
};

csl_memory_map mmap{
  mmap(){
    set_type(hierarchical);
  }
};
