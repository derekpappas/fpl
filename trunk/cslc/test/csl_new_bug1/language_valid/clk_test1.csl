//Monica

csl_unit u1{
  csl_port p_in1(input,4);
  csl_port p_in2(input,8);
  csl_port p_clk(input);
  u1(){
    p_clk.set_attr(clock);
  }
};

csl_unit u2{
  csl_port p_out1(output,4);
  csl_port p_out2(output,8);
  csl_port p_clk(input);
  u2(){
    p_clk.set_attr(clock);
  }
};
csl_unit u3{
  csl_port p_in1(input,4);
  csl_port p_in2(input,8);
  csl_port p_clk(input);
  u3(){
    p_clk.set_attr(clock);
  }
};

csl_unit top{
  csl_signal s_clk;
  csl_signal p1(4),p2(8);
  u1 u11(.p_clk(s_clk),.p_in1(p1),.p_in2(p2));
  u2 u12(.p_clk(s_clk),.p_out1(p1),.p_out2(p2));
  u3 u13(.p_clk(s_clk),.p_in1(p1),.p_in2(p2));
  top(){
    s_clk.set_attr(clock);
    set_clock(s_clk);
  }
};
