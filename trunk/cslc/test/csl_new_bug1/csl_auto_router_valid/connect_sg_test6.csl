csl_signal_group sg{
  csl_signal s1(4),s2(8);
  sg(){}
};
csl_signal_group sg1{
  csl_signal s1(2),s2(4);
  sg sg;
  sg1(){}
};
csl_signal_group sg2{
  sg1 sg1;
  csl_signal s1;
  sg2(){}
};
csl_signal_group sg3{
  sg2 sg2(19);
  sg3(){}
};
csl_interface ifc1{
  csl_port s1(output,19);
  ifc1(){}
};
csl_unit u{
  ifc1 ifc1;
  u(){}
};
csl_unit top{
  u u;
  sg3 sg3;
  top(){
    u.ifc1.connect_by_name(sg3);
  }};
