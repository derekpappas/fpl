csl_interface ifc1 {
  csl_port x(input,2),y(output,4),z(input,4);
  ifc1 () {}
};

csl_interface ifc2 {
  csl_port a(output,2),b(input,4);
  ifc2 () {}
};

csl_interface ifc {
  ifc1 ifc1;
  ifc2 ifc2;
  csl_port x1(input),y1(output,2);
  ifc () {}
};

csl_unit u1 {
  ifc ifc00;
  csl_port a1(input,2),a2(output),b1(output,4);
  csl_signal s;
  u1 () {}
};

csl_unit u2 {
  ifc ifc01;
  csl_port a3(output,2);
  csl_signal s1,s2(2);
  u2 () {}
};

csl_unit u {
  ifc1 ifc10;
  u1 u1;
  u2 u2;
  u () {
    u1.a1.connect_by_name(u2.a3);
    ifc10.x.connect_by_name(u1.ifc00.ifc1.x);
  }
};
