csl_unit dut{
  csl_port stim_in(input), stim_v(input), exp_d(output),      exp_v(output);
  csl_port clk(input);
  csl_signal s;
  dut(){
  clk.set_attr(clock);
  s = clk;
  exp_d = exp_v;
  stim_v = stim_in;
}
};
csl_vector stim_vec{
  stim_vec(){
    set_unit_name(dut);
    set_direction(input);
  }
};
csl_signal en;
csl_signal valid;
csl_vector exp_vec{
  exp_vec(){
   set_unit_name(dut);
   set_direction(output);
   set_vc_compare_trigger( valid);
}
};
csl_testbench tb{
csl_signal clk(reg);
dut dut_1(.clk(clk));
tb(){
  clk.set_attr(clock);
  add_logic(clock,clk,100,ps);
}
};
