//testing: obj_multi_dim.get_dim_upper(num_expr);
//         - param 1 : dimension index(dimension indexes start from 0 and go up to num_of_dims-1)
//         - returns : numeric expresion that represents the upper index of the specified dimension  

csl_multi_dim_bitrange obj_name(10);
obj_name.set_dim_range(0, 1, 10);
obj_name.set_dim_range(1, 2, 20);

csl_multi_dim_bitrange obj_name1(6);
obj_name1.set_dim_width(0, obj_name.get_dim_upper(0));
obj_name1.set_dim_width(1, obj_name.get_dim_upper(1));

csl_unit u1{
    csl_signal s0;
    csl_signal s1;
 
    u1(){
      s0.set_bitrange(obj_name);
      s1.set_bitrange(obj_name1);

    }
};
