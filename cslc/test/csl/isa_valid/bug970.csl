csl_isa_element root_fmt{
    root_fmt(){
       set_type(root_format);
        set_width(32);
    }
};

csl_isa_element fmt : root_fmt{
    f_op i_op;
    fmt(){
       set_type(instr_format);
    }
};

csl_isa_element ex_instr : fmt{
    ex_instr(){
          set_type(instr);
