//Testbench test:DUT with ports

csl_unit DUT{
   csl_port clk    ( input  );

   csl_port stim_in_0 ( input  );
   csl_port stim_in_1 ( input  );
   csl_port exp_out_0 ( output );
   csl_port exp_out_1 ( output );
   DUT(){
      clk.set_attr(clock);
   }
};

csl_vector stim_vec{
   stim_vec(){
      set_unit_name ( DUT );
      set_direction   ( input );
   }
};

csl_vector exp_vec{
   exp_vec(){
      set_unit_name ( DUT );
      set_direction   ( output );
   }
};

csl_unit a {
  csl_port p1(input);
  csl_port p2(input);
  csl_port p3(output);
  csl_port p4(output);
  csl_port p5(input);
  DUT dut1(.stim_in_0(p1),.stim_in_1(p2),.exp_out_0(p3),.exp_out_1(p4),.clk(p5));
  a (){}
};

csl_testbench tb{
  csl_signal clk(reg);
   DUT DUT_( .clk( clk ));
   tb(){
         clk.set_attr(clock);
         add_logic(clock, clk,2,ns);
      }
};
