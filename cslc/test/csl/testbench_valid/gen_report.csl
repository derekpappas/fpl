  csl_port clk(input);
  csl_port stim_i(input),exp_o(output);
  dut(){
    clk.set_attr(clock);
}
};

csl_vector stim{
  stim(){
    set_unit_name(dut);
    set_direction(input);
  }
};

csl_vector exp{
  exp(){
    set_unit_name(dut);
    set_direction(output);
  }
};

