//illegal: instanciating fields  inside an instruction is illegal

csl_enum e_field{
    ADD = 0,
    SUB = 1
};

csl_isa_field op(2, e_field);
csl_isa_field field(2);
csl_isa_field field2(2);

csl_isa_element format{
    op op_i;
    field field_i;
    format(){
	set_type(instr_format);
       set_width(4);            
       set_position(op_i, 2);
       set_next(op_i,field_i);
    }
};

csl_isa_element add1 : format{
     field2 field2_i;  //can't instanciate field into a instruction
     add1(){
	set_type(instr);
         op.set_enum_item(ADD);  
         set_position(field2_i,2); //can't set the position
     }
};

csl_isa_element sub1 : format{  
     sub1(){
	set_type(instr);
          op.set_enum_item(SUB);
     }
};
