//register doesn't have a width specified

csl_register reg{
  reg(){
   //register's width should be here
    set_type(register);
  }
};

csl_unit u{
  reg reg1;
  u(){}
};

csl_memory_map_page mpg{
  mpg(){
    add_address_range(0,512);
    add(u.reg1,"reg",100);
  }
};

csl_memory_map mmap{
  mpg mpg1;
  mmap(){
    set_type(hierarchical);
  }
};
