csl_register r2{
  r2(){
    set_width(16);
    set_type(counter);
    add_logic(count_direction,up);
  }
};

csl_unit u1{
  csl_port clk(input);
  csl_port p1(input);
  csl_port p2(input);
  csl_port p3(output,16);
  r2 r2(.reset_(p1),.enable(p2),.clock(clk),.reg_out(p3));
  u1(){
  }
};
