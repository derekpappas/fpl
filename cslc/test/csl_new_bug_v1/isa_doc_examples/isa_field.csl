//Monica

csl_enum op_code{
 ADD,
 MOV,
 SUB
};

csl_enum eALU{
   ALU0,
    ALU1,
    ALU2
};

csl_isa_field op{
  op(){
    set_type(opcode);
    set_width(2); 
    set_enum(op_code);
  }
};
csl_isa_field alu{
  alu(){
    set_type(selector);
    set_width(2); 
    set_enum(eALU); 
  }   
};
csl_isa_element isa {
  isa() {
    set_type(root_format);
    set_width(32);
  }
};

csl_isa_element f: isa {
 alu alu;
  op op;
  f() {
    set_type(instr_format);
   
  } 
};  
csl_isa_element f1: f{
 
  f1() {
    set_type(instr);
     op.set_enum_item(ADD);
     alu.set_enum_item(ALU0); 
  }
};  
csl_isa_element f2: f{
 
  f2() {
    set_type(instr);
    op.set_enum_item(MOV);
    alu.set_enum_item(ALU1); 
  }
};  
csl_isa_element f3: f{
 
  f3() {
    set_type(instr);
    op.set_enum_item(SUB);
    alu.set_enum_item(ALU2); 
  }
};  
csl_unit top {
};
