//costelc
//port - interface concatenation


csl_interface ifc{
  csl_port p1_out(output,8);
  csl_port p2_out(output,8);
  ifc() {}
};

csl_unit a{
  csl_port a_in(input);
  ifc ifc0;
  a() {}
};

csl_unit b{
  csl_port b_in(input);
  csl_port b_out(output,4);
  b() {}
};
	
csl_unit c{
  csl_port c_in(input,20);
  csl_port c_out(output);
  c() {}
};

csl_unit top{
  b b0;
  a a0;  
c c0(.c_in({b0.b_out,a0.ifc0}));
  top() {}
};
