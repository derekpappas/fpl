csl_enum e_op{
  ALU,
  MOV,
  BR
 };
csl_enum e_ALU{
  OR,
  XOR,
  ADD,
  SUB
 };
csl_isa_field f_op(2);
f_op.set_type(opcode);

csl_isa_field f_op1(5);
f_op1.set_type(opcode);


csl_isa_field f_opp{
  f_op f_op;
  f_op1 f_op1;
  f_opp(){
    set_width(10);
    set_type(opcode);
    set_position(f_op,7);
    set_position(f_op1,0);
  }
};

csl_isa_element isa {
  isa() {
    set_type(root_format);
    set_width(32);
  }
};

csl_isa_element format : isa{
  f_opp f_opp;
  format() {
    set_type(instr_format); 
    set_position(f_opp, 21);
  }
};

csl_isa_element instr : format {
  instr() {
    set_type(instr);
  }
};
