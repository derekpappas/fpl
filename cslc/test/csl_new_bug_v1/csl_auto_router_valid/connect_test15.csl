csl_unit u1{
  csl_port x(input);
  u1(){}
};
csl_unit u2{
  u1 u1;
  csl_port x(input);
  u2(){}
};
csl_unit u3{
  u2 u2;
  csl_port x(input),y(input);
  u3(){}
};
csl_unit u4{
  u3 u3;
  csl_port x(input),y(input);
  u4(){}
};

csl_unit top{
  csl_signal s1,s2;
  u4 u4;

  top(){
    s1.connect_by_pattern(x);
    s2.connect_by_pattern(y);
  }
};
