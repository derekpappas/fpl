// add all addressable objects on valid address (exists and not reserved) (add reserved addresses also)

csl_fifo f1{
  f1(){
    set_width(1024);
    set_depth(32);
  }
};

csl_register r1{
  r1(){
    set_width(1024);
    set_type(register);
  }
};

csl_register_file rf1{
  rf1(){
    set_width(1024);
    set_depth(32);
  }
};

csl_unit top{
  f1 f1_1;
  r1 r1_1;
  rf1 rf1_1;
};

csl_memory_map_page mmp1{
  mmp1(){
     add_address_range(0, 4096);
     add_reserved_address_range(1024, 2048);
     set_unit_name(top);
     add(top.f1_1, "f1", 0);
     add(r1_1, "r1", 2049);
     add(top.rf1_1, "rf1", 3072);
  }
};
csl_memory_map mmap{
  mmap(){
    set_data_word_width(32);
    set_type(hierarchical);
    }
};

