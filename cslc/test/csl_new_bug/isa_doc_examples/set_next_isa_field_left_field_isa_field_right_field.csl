csl_isa_field op{
  op(){
set_type(selector);
 set_width(2);
  }};
csl_isa_field rega{
  rega(){
set_type(rf_address);
 set_width(5);
  }};
csl_isa_field regb{
  regb(){
set_type(rf_address);
 set_width(5);
  }};
csl_isa_element isa { 
  isa() { 
    set_type(root_format); 
    set_width(32);         
  }
};
csl_isa_element format : isa { 
  op op; 
  rega rega; 
  regb regb; 
  format() { 
    set_type(instr_format); 
    set_position(op, 30); 
    set_next(op,rega); 
    set_next(rega,regb);
  }
}; 
csl_isa_element f1: format{

  f1(){
    set_type(instr);
    
  }};
