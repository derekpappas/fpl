//connecting a signal group with an interface that has different port names

csl_interface ifc {
  csl_port p1(input),p2(output);
  ifc () {}
};

csl_signal_group sg {
  csl_signal s1,s2,s3;
  sg () {}
};

csl_unit u1 {
  ifc ifc1;
  u1 () {}
};

csl_unit u2 {
  sg sg1;
  u2 () {}
};

csl_unit u3 {
  u1 u11;
  u2 u21;
  u3 () {
    u11.ifc1.connect(u21.sg1);
  }
};
