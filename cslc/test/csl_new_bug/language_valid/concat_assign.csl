//concat_in_assign

csl_interface ifc1{
   csl_port p1(input,8);
   csl_port p2(output,8);
   csl_port p3(input,4);
   csl_port p4(output,2);
   ifc1(){}
};

csl_unit u{
   ifc1 inter1;
   csl_port p1(input,3);
   csl_signal s1(4);
   csl_signal s2(2), s3;
   u(){
   inter1.p1={p1, inter1.p3};
   inter1.p4=s2;
   inter1.p2={inter1.p4, s2, s1};
   {s2, s3} = p1;
   }
};
