// parameters defined in interface 
 csl_interface ifc{
   csl_parameter pr_ifc1(6);         //pr_ifc1 is 32 bit
   csl_parameter pr_ifc2(3,5);       //pr_ifc2 is set to 5 bit
   csl_parameter pr_ifc3(2'b1);      //pr_ifc3 is 2 bit       
   csl_port p_ifc(input,8);
   ifc() {}
};
// parameters defined in signal_group
csl_signal_group sg{
   csl_parameter pr_sg1(6);         //pr_sg1 is 32 bit
   csl_parameter pr_sg2(3,5);       //pr_sg2 is set to 5 bit
   csl_parameter pr_ifc3(2'b1);      //pr_sg3 is 2 bit       
   sg(){}
};

// parameters defined in unit

csl_unit a{
  csl_parameter pr_a1(8);         //pr_a1 is 32 bit
   csl_parameter pr_a2(3,5);       //pr_a2 is set to 5 bit
   csl_parameter pr_a3(2'b11);      //pr_a3 is 2 bit    
   csl_port p1(input,pr_a1);
   csl_port p2(output,pr_a2);    
  a(){}
};

csl_unit top{
   csl_port p1(input,8);
   csl_port p2(output,3);
   a a(.p1(p1),.p2(p2));
