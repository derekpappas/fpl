csl_unit u1{
  u1(){}
};

csl_unit u2{
  u1 u1;
  u2(){}
};

csl_unit top{
  u2 u2;
  top(){
  }
};

csl_memory_map_page mpage1{
	mpage1(){
      add_address_range(0,255);
      set_unit_name(u1);
    }
};

csl_memory_map_page mpage2{
  mpage2(){
    add_address_range(0,255);
    set_unit_name(u2);
  }
}; 

csl_memory_map_page mpage3{
  mpage3(){
    add_address_range(0,255);
    set_unit_name(top);
  }
};

csl_memory_map mm{
	mm(){
    set_type(hierarchical);
    set_data_word_width(32);
    set_top_unit(top);
    
}
};
