csl_enum e_op{
  ALU,
  MOV,
  BR
 };

csl_isa_field f_op(2,e_op);
f_op.set_type(opcode);

csl_isa_field f_opp{
  f_op f_op;
  f_opp(){
    set_width(10);
    set_type(opcode);
  }
};

csl_isa_element isa {
  isa() {
    set_type(root_format);
    set_width(32);
  }
};

csl_isa_element format :isa {
  format () {
    set_type(instr_format);
  }
};

csl_isa_element instr :format{
  f_opp f_opp;
  instr() {
  set_type(instr);
  set_position(f_opp, 0);
  f_opp.f_op.set_enum_item(ALU);
 }
};
