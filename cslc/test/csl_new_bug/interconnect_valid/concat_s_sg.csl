//costelc 
//signal - signal group concatenation


csl_unit a {
  csl_port a_in(input);
  csl_port a_out(output,8);
  a() {}
};

csl_unit b {
  csl_port b_in(input);
  csl_port b_out(output,8);
  b() {}
};

csl_unit c {
  csl_port c_in(input);
  csl_port c_out(output,16);
  c() {}
};

csl_unit d {
  csl_port d_in(input,32);
  csl_port d_out(output);
  d() {}
};

csl_signal_group sg {
  csl_signal s1(8);
  csl_signal s2(8);
  csl_signal s3(16);
  sg() {}
};

csl_unit top {
  csl_signal s3(16),s2;
  sg sg0;
  a a0(.a_out(sg0.s1),.a_in(s2));
  b b0(.b_out(sg0.s2),.b_in(s2));
  c c0(.c_out(s3),.c_in(s2));
  d d0(.d_in({sg0.s3,s3}),.d_out(s2));
  top() {}
};
	
