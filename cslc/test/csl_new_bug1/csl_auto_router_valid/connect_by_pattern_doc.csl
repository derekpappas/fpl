csl_interface ifc {
   csl_port p_x(input);
   csl_port p_y(output);
   ifc () {}
};

csl_unit a {
  ifc ifc0;
  a () {}
};
csl_unit b {
  a a0;
  b () {}
};
csl_unit c {
  b b0;
  b b1;
  ifc ifc1;
  c () {
// 2 matches : b0.a0.ifc0 and b1.a0.ifc0
    ifc1.connect_by_pattern(a0.ifc0); 
  }
}; 

