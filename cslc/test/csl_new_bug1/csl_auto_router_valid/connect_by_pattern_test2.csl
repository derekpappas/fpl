csl_register r1{
  r1(){
    set_type(register);
    set_width(8);
  }};
csl_unit u1{
  csl_port p1(input,8);
  csl_port p2(input,4);
  csl_port p3(output,8);
  r1 r10;
  u1(){}
};
csl_unit u2{
  csl_port p1(input,8);
  csl_port p2(output,8);
  u1 u10;
  u2(){
    p1.connect_by_pattern(r10.reg_in);  //by pattern
  }};
csl_unit u3{
  u2 u20;
  u3(){
    u20.p2.connect_by_pattern(r10.reg_out); //by pattern
  }
};
