csl_isa_field f_op{
  f_op(){
set_type(opcode);
 set_width(2);
  }};
csl_isa_field f_rega{
  f_rega(){
set_type(rf_address);
 set_width(12);
  }};
csl_isa_field f_alu{
  f_alu(){
set_type(selector);
 set_width(2);
  }};
csl_isa_element isa { 
  isa() { 
    set_type(root_format); 
    set_width(32); 
  }
};
csl_isa_element f : isa{ 
   f_op f_op; 
  f_rega f_rega; 
  f_alu f_alu; 
  f() { 
    set_type(instr_format); 
    set_position(f_alu, 16); 
    set_previous(f_alu,f_rega); 
    set_previous(f_rega,f_op); 
  }
}; 

csl_isa_element f1 :f{ 
 
  f1() { 
    set_type(instr); 
    
  }
}; 
