//testing: obj_multi_dim.get_dim_bitrange(num_expr);
//         - param 1 : dimension index(dimension indexes start from 0 and go up to num_of_dims-1)
//         - returns : the simple dimension bitrange associated with the specified dimension


csl_bitrange br1(1);
csl_bitrange br2(2);
csl_bitrange br3(3);
csl_bitrange br4(4);
csl_bitrange br5(5);
csl_bitrange br6(6);

csl_multi_dim_bitrange obj_name0(6);
obj_name0.set_dim_bitrange(0, br1);
obj_name0.set_dim_bitrange(1, br2);
obj_name0.set_dim_bitrange(2, br3);
obj_name0.set_dim_bitrange(3, br4);
obj_name0.set_dim_bitrange(4, br5);
obj_name0.set_dim_bitrange(5, br6);

csl_multi_dim_bitrange obj_name1(6);
obj_name1.set_dim_width(0,obj_name0.get_dim_bitrange(0));
obj_name1.set_dim_width(1,obj_name0.get_dim_bitrange(1));
obj_name1.set_dim_width(2,obj_name0.get_dim_bitrange(2));
obj_name1.set_dim_width(3,obj_name0.get_dim_bitrange(3));
obj_name1.set_dim_width(4,obj_name0.get_dim_bitrange(4));
obj_name1.set_dim_width(5,obj_name0.get_dim_bitrange(5));

csl_unit u1{
    csl_signal s0;
    csl_signal s1;
    csl_signal s1_br1;

    u1(){
      s0.set_bitrange(obj_name0);
      s1.set_bitrange(obj_name1);
      s1_br1.set_bitrange(br1);
    }
};
