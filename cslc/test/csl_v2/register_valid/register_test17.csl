//Petronela


csl_register rg{
  rg(){
    set_width(16);
    set_type(register);
  }
};

csl_register r1{
  r1(){
    set_width(30);
    set_type(register);
    set_attributes(rd);
  }
};
csl_register r2{
  r2(){
    set_width(22);
    set_type(register);
    add_logic(neg_output);
  }
};
csl_register r3{
  r3(){
    set_width(73);
    set_type(register);
    add_logic(set,5);
    add_logic(reset,6);
  }
};
csl_register r4{
  r4(){
    set_width(37);
    set_type(counter);
    add_logic(count_direction,up);
    add_logic(gray_output);
    add_logic(count_amount, 3);
    add_logic(start_value, 2);
    add_logic(end_value, 5);
  }
};
csl_register r5{
  r5(){
    set_width(49);
    set_type(register);
  }
};

csl_unit u1{
  rg rg;
  r1 r1;
  r2 r2;
  r3 r3;
  r4 r4;
  r5 r5;
  csl_signal clk;
  u1(){
    clk.set_attr(clock);
  }
};
